<!DOCTYPE html>
<html>
  <head>
    <title>Organizer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <% if user_signed_in? %>
        <div class="header-item"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></div>
      <% else %>
        <div class="header-item"><%= link_to 'Sign In', new_user_session_path %></div>
        <div class="header-item"><%= link_to 'Sign Up', new_user_registration_path %></div>
      <% end %>
    </div>
    <p class="notice"><%#= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
